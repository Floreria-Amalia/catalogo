//fuentes
@import url('https://fonts.googleapis.com/css2?family=Dancing+Script:wght@600&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Source+Serif+4:ital,opsz,wght@1,8..60,300;1,8..60,400&display=swap');

//colores
fuccia = #ED3989
verde = #24A455
marron = #2B170A
naranja=#F58634

body
    margin: 0
    
    .grids                
        margin-top 80px        
        padding: 0 10px
        .titulos_categorias
            color: marron
            text-align: center
            margin: 10px 0
            font-weight: normal
        article
            display: grid
            grid-template-columns: 1fr 1fr
            grid-template-areas: "imagen descripcion" "imagen precio" "colores precio""separador separador";           
            font-family: 'Source Serif 4';
            //border solid 1px black
            .producto
                grid-area: imagen                
                justify-self: center
                align-self: center
                img
                    width: 100%
                    //max-width: 260
                    //max-height: 315px
                    
                    
                    
            .colores
                grid-area: colores
                display: flex                
                justify-content: center
                align-items: center
                
                p
                    //border solid 1px black
                    //box-sizing: border-box
                .bolita
                    width: 15px
                    height: 15px
                    border-radius: 50%
                    margin: 0 5px
                    

            .descripcion
                grid-area: descripcion
                //background: blueligth
               
                h2
                    margin: 0
                    font-family: 'Dancing Script';
                    //border solid 1px black
                    //box-sizing: border-box
                    color: fuccia
                    font-size: 30px
                    padding-left: 10px
                ul
                    margin: 10px 0
                    padding: 0 20px                                        
                    //border solid 1px black
                    //box-sizing: border-box
                    list-style: none
                    list-style-image: url(../img/vinieta.svg)
                    font-size: 18px
            .precio
                grid-area: precio                
                display:flex
                justify-content: center
                align-items: center
                flex-direction: column
                                
                p
                    margin: 0
                    //border solid 1px black
                    //box-sizing: border-box
                :nth-child(1)
                    font-size: 12px
                    margin-bottom: -5px
                :nth-child(2)
                    font-size: 30px                    
                :nth-child(3)
                    font-size: 15px
                    text-decoration: line-through
                    color: fuccia
                    margin-top: -8px
                    
            .separador 
                grid-area: separador                
                img
                    width: 100%
        .desayuno
            display: grid
            grid-template-columns: 1fr 1fr
            grid-template-areas:  "imagen imagen""descripcion descripcion""aviso precio""separador separador";           
            font-family: 'Source Serif 4';
            //border solid 1px black            
            gap 10px 0
            margin-bottom: 10px
            .foto
                grid-area: imagen
                display: flex
                justify-content: center
                img
                    width: 80%                    
                    //max-width: 260
                    //max-height: 315px
                .angela
                    max-width: 260px                                                                                                                                           
            .descripcion
                grid-area: descripcion
                //background: blueligth
                //border solid 1px black
                
                
                .nombre_desayuno
                    margin: 0
                    font-family: 'Dancing Script';
                    //border solid 1px black
                    //box-sizing: border-box
                    color: naranja
                    font-size: 30px
                    text-align: center
                p
                    font-size: 18px                
            .aviso
                grid-area: aviso
                text-align: center
                border solid 1px naranja
                border-radius: 10px
                box-sizing: border-box
                font-size: 14px
                padding: 10px 0 
            .precio                
                grid-area: precio                
                display:flex
                justify-content: center
                align-items: center
                flex-direction: column
                //border solid 1px black
                //box-sizing: border-box                
                p
                    margin: 0
                    //border solid 1px black
                    //box-sizing: border-box
                :nth-child(1)
                    font-size: 12px
                    margin-bottom: -5px
                :nth-child(2)
                    font-size: 36px                    
                :nth-child(3)
                    font-size: 18px
                    text-decoration: line-through
                    color: naranja
                    margin-top: -8px
                    
            .separador 
                grid-area: separador                                
                img
                    width: 100%
        .peluche_derecha
            display: grid
            grid-template-columns: 1fr 1fr
            grid-template-areas: "descripcion imagen" "precio imagen" "precio colores" "separador separador";           
            font-family: 'Source Serif 4';
            
    
    .whatsApp
        //background: rgb(255, 255, 255)
        position: fixed
        bottom: 65px
        right: 10px
        //border-radius: 50%
        //padding: 3px
        //border: solid 1px #2FCC71
        img
            width: 50px
            height: 50px
    footer        
        position: fixed
        display: flex
        flex-direction: column
        align-items: center
        
        width: 100%
        
        bottom: 0
        .llamar
            display: flex
            position: absolute
            bottom: 5px
            align-items: center
            
            p
                color rgba(255, 208, 0, 0.971)
                
            img
                width: 20px
                height: 20px
                margin: 0 5px
            a
                text-decoration: none                            
                color: white
                font-size: 18px                
        img
            width: 100%
            
